<body>
  <h1>ðŸ¦– Dinosaur Zoo Simulator ðŸ¦•</h1>
  <div class="money">ðŸ’° Money: $<span id="money">100</span></div>
  <div class="store">
    <h2>ðŸ›’ Dino Store</h2>
    <div id="store-items">
      <!-- Dinosaur items will be dynamically added here -->
    </div>
  </div>
  <div class="zoo">
    <h2>ðŸ¦– Your Zoo</h2>
    <div id="zoo">
      <p>No dinosaurs yet! Buy some from the store.</p>
    </div>
  </div>
  <script>
    const dinosaurs = [
      { name: "T-Rex ðŸ¦–", price: 50 },
      { name: "Triceratops ðŸ¦•", price: 40 },
      { name: "Velociraptor ðŸ‰", price: 30 },
      { name: "Stegosaurus ðŸ¦•", price: 25 },
      { name: "Pterodactyl ðŸ¦…", price: 20 },
    ];

    let money = 100;
    const moneyDisplay = document.getElementById("money");
    const storeItems = document.getElementById("store-items");
    const zoo = document.getElementById("zoo");

    function updateMoneyDisplay() {
      moneyDisplay.textContent = money;
    }

    function buyDinosaur(dino) {
      if (money >= dino.price) {
        money -= dino.price;
        updateMoneyDisplay();
        addDinosaurToZoo(dino.name);
      } else {
        alert("Not enough money to buy this dinosaur!");
      }
    }

    function addDinosaurToZoo(dinoName) {
      if (zoo.querySelector("p")) zoo.innerHTML = ""; // Remove default message
      const dinoElement = document.createElement("div");
      dinoElement.textContent = dinoName;
      zoo.appendChild(dinoElement);
    }

    function renderStore() {
      storeItems.innerHTML = ""; // Clear store items
      dinosaurs.forEach((dino) => {
        const dinoElement = document.createElement("div");
        dinoElement.className = "dino";
        dinoElement.innerHTML = `
          <span>${dino.name} - $${dino.price}</span>
          <button onclick="buyDinosaur(${JSON.stringify(dino)})" ${
          money < dino.price ? "disabled" : ""
        }>Buy</button>
        `;
        storeItems.appendChild(dinoElement);
      });
    }

    renderStore();
    updateMoneyDisplay();
  </script>
</body>
